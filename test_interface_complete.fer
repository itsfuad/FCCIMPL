// Test comprehensive interface functionality

// Empty interface - accepts all types
type Any interface {};

// Interface with methods
type Shape interface {
    area() -> f64,
    perimeter() -> f64
};

type Drawable interface {
    draw() -> str
};

// Struct implementing Shape
type Rectangle struct {
    .width: f64,
    .height: f64
};

fn (r: Rectangle) area() -> f64 {
    return r.width * r.height;
}

fn (r: Rectangle) perimeter() -> f64 {
    return 2.0 * (r.width + r.height);
}

// Struct implementing both Shape and Drawable
type Circle struct {
    .radius: f64
};

fn (c: Circle) area() -> f64 {
    return 3.14159 * c.radius * c.radius;
}

fn (c: Circle) perimeter() -> f64 {
    return 2.0 * 3.14159 * c.radius;
}

fn (c: Circle) draw() -> str {
    return "Drawing circle";
}

