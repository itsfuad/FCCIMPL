  .editor :global(.view-lines),
  .editor :global(.view-line),
  .editor :global(.view-line) > span,
  .editor :global(.mtk1),
  .editor :global(.mtk2),
  .editor :global(.mtk3),
  .editor :global(.mtk4),
  .editor :global(.mtk5),
  .editor :global(.mtk6) {
