    display: flex;
    align-items: center;
    gap: 1rem;
  }

  /* macOS-style window dots */
  .window-dots {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .dot-red {
    background: #ff5f57;
  }

  .dot-yellow {
    background: #ffbd2e;
  }

  .dot-green {
    background: #28ca42;
  }

  .file-name {
    font-size: 0.8125rem;
    font-weight: 500;
    color: #6b7280;
  }

