    font-size: 0.6875rem;
    color: #9ca3af;
    background: rgba(0, 0, 0, 0.02);
    border-top: 1px solid rgba(0, 0, 0, 0.06);
  }

  :global([data-theme='dark']) .editor-footer {
    color: #6b7280;
    background: rgba(255, 255, 255, 0.02);
    border-top-color: rgba(255, 255, 255, 0.06);
  }

  .editor-footer #output-info {
