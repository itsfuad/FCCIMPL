        background: rgba(0, 0, 0, 0.05);
    }

    :global([data-theme='dark']) .icon-button:hover {
        background: rgba(255, 255, 255, 0.1);
    }




  .run-button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  /* Content area - responsive layout */
  .playground-content {
    display: flex;
    flex-direction: row; /* Horizontal on desktop */
    height: 650px;
    position: relative;
  }

  /* Editor panel */
