// Test map type and map literals

// Test 1: Map type in type declaration
type StringToInt map[str]i32;

// Test 2: Map literal with named type
let m1: StringToInt = StringToInt{
    "one" => 1,
    "two" => 2,
    "three" => 3
};

// Test 3: Map literal with inline type
let m2 := map[str]i32{
    "hello" => 100,
    "world" => 200
};

// Test 4: Empty map
let m3 := map[i32]str{};

// Test 5: Map in condition
if m1 == StringToInt{"one" => 1, "two" => 2, "three" => 3} {
    let ok := 1;
}

// Test 6: Nested map
type NestedMap map[str]map[str]i32;

let nested := NestedMap{
    "outer1" => map[str]i32{"inner1" => 1, "inner2" => 2},
    "outer2" => map[str]i32{"inner3" => 3}
};

// other type map
type IntToStr map[i32]str;
let m4: IntToStr = IntToStr{
    1 => "one",
    2 => "two",
    val => "three"
};