// Test named map types and literals

// Define a named map type alias
type StringToInt map[str]i32;
type PersonMap map[str]Person;

type Person struct {
    .name: str,
    .age: i32,
};

// Test 1: Using named map type with literal
let scores := StringToInt {
    "Alice" => 95,
    "Bob" => 87,
    "Charlie" => 92,
};

// Test 2: Named map type with struct values
let people := PersonMap {
    "john" => Person { .name = "John", .age = 30 },
    "jane" => Person { .name = "Jane", .age = 25 },
};

// Test 3: Function with named map type parameter
fn getTotalScore(scores: StringToInt) -> i32 {
    return 100;
}

// Test 4: Function returning named map type
fn createMap() -> StringToInt {
    return StringToInt {
        "one" => 1,
        "two" => 2,
    };
}
