// Test scope handling

// Should error: same scope
let x := 1;
let x := 2;

// Should NOT error: different scopes
if true {
    let y := 1;
} else {
    let y := 2;
}

// Should NOT error: nested scopes
let z := 10;
if true {
    let z := 20; // shadows outer z
}

// Should error: same block scope
if true {
    let a := 1;
    let a := 2;
}
