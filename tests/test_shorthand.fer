type P struct {
    .s: i32,
};

// Test 1: Dot syntax (already working)
let p1 := P{.s = 10};

// Test 2: Shorthand syntax (new feature)
let p2 := P{s: 20};

// Test 3: In if condition with dot syntax
if p1 == P{.s = 10} {
    let x := 1;
}

// Test 4: In if condition with shorthand syntax (critical!)
if p2 == P{s: 20} {
    let y := 2;
}

